########## RELATIONSHIP BETWEEN PI and C ##########

for ((r=1; r<=1; r++))
do
cat   SD04_2L/OUTPUT_INPUT_SD04_2L_selpos_GC2e-8.slim/table_C_PI$r.txt   SD04_2R/OUTPUT_INPUT_SD04_2R_selpos_GC2e-8.slim/table_C_PI$r.txt   SD04_3L/OUTPUT_INPUT_SD04_3L_selpos_GC2e-8.slim/table_C_PI$r.txt   SD04_3R/OUTPUT_INPUT_SD04_3R_selpos_GC2e-8.slim/table_C_PI$r.txt > TABLE_C_PI_SD04$r.txt
sleep 2
done

for((r=1;r<=1;r++))
do
awk '{print $1}' TABLE_C_PI_SD04$r.txt > kk
mv kk c_vec
awk '{print $2}' TABLE_C_PI_SD04$r.txt > kk
mv kk pi_vec
sleep 2
R CMD BATCH script.R
sleep 5
mv script.Rout script.Rout$r
sed -n '32p;33p;34p' script.Rout$r >> TABLE_FIT_C_PI_SD04
done

cd   SD04_2L/OUTPUT_INPUT_SD04_2L_selpos_GC2e-8.slim
